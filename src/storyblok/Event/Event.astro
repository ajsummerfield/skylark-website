---
import { storyblokEditable } from '@storyblok/astro';
import './Event.scss';

const { blok } = Astro.props;
---

<div {...storyblokEditable(blok)}>
  {blok.link.url.length > 0 && (
    <a href={blok.link.url} target={blok.link.target} class="event">
      <div class="event__thumbnail-wrapper">
        <img src={blok.thumbnail.filename} alt={blok.title} class="event__thumbnail">
      </div>
      <div class="event__details">
        <h3 class="event__title">{blok.title}</h3>
        <h4 class="event__date">{blok.date}</h4>
        <p class="event__desc">{blok.description}</p>
      </div>
    </a>
  )}
  {blok.link.url.length == 0 && (
    <div class="event event--coming-soon">
      <div class="event__thumbnail-wrapper">
        <img src={blok.thumbnail.filename} alt={blok.title} class="event__thumbnail">
      </div>
      <div class="event__details">
        <h3 class="event__title">{blok.title}</h3>
        <h4 class="event__date">{blok.date}</h4>
        <p class="event__desc">{blok.description}</p>
      </div>
    </div>
  )}
</div>